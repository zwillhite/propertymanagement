<h1>Listing users</h1>

<table>
  <tr>
    <th>Username</th>
    <th>Email</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.username %></td>
    <td><%= user.email %></td>
    <td>
		<% if can? :read, user %>
			<%= link_to 'Show', user %>
		<% end %>
	</td>
    <td>
		<% if can? :manage, user %>
			<%= link_to 'Edit', edit_user_path(user) %>
		<% end %>
	</td>
	<td>
		<% if can? :manage, user %>
			<%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %>
		<% end %>
	</td>
  </tr>
<% end %>
</table>

<br />

<% if current_user && current_user.has_role?(:manager) %>
	<%= link_to 'New User', new_user_path %>
<% end %>

